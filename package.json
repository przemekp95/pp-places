{
  "name": "pp-places",
  "version": "1.0.0",
  "description": "WordPress plugin for places management with AJAX filters",
  "main": "pp-places.php",
  "scripts": {
    "build": "npm run build:css && npm run build:clean",
    "build:css": "sass assets/pp-places.scss assets/pp-places.css --style=expanded --no-source-map",
    "build:clean": "rm -f assets/pp-places.css.map",
    "dev": "npm run build:css && npm run build:clean",
    "watch": "sass assets/pp-places.scss assets/pp-places.css --style=expanded --watch --no-source-map"
  },
  "keywords": [
    "wordpress",
    "plugin",
    "places",
    "ajax",
    "filters"
  ],
  "author": "PP Solutions",
  "license": "GPL-2.0+",
  "devDependencies": {
    "sass": "^1.77.8"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
